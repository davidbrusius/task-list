<% if list.favorited_by?(current_user) %>
  <%= link_to list_unfavorite_path(list), method: :delete, remote: true, data: {
              title: 'Unfavorite List', toggle: 'tooltip', placement: 'bottom' } do %>
    <i class="glyphicon glyphicon-star"></i>
  <% end %>
<% else %>
  <%= link_to list_favorite_path(list), method: :post, remote: true, data: {
              title: 'Favorite List', toggle: 'tooltip', placement: 'bottom' } do %>
    <i class="glyphicon glyphicon-star-empty"></i>
  <% end %>
<% end %>

<li class="list-group-item task-<%= task.id %>">
  <%= link_to task.description, edit_task_path(task) %>
  <div class="pull-right">
    <%= link_to edit_task_path(task), data: { title: 'Edit', toggle: 'tooltip', placement: 'bottom' } do %>
      <i class="glyphicon glyphicon-pencil"></i>
    <% end %>
    <%= link_to task, method: :delete, remote: true, data: { confirm: 'Are you sure?',
                title: 'Delete', toggle: 'tooltip', placement: 'bottom' } do %>
      <i class="glyphicon glyphicon-trash text-danger"></i>
    <% end %>
  </div>
</li>
